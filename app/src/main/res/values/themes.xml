<resources>
    <!-- Base application theme. -->
    <style name="Theme.SaveApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/emerald_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimaryContainer">@color/emerald_100</item>
        <item name="colorOnPrimaryContainer">@color/emerald_800</item>
        <item name="colorSecondaryContainer">@color/emerald_100</item>
        <item name="colorSurfaceContainerHighest">@color/emerald_900</item>
        <item name="colorOnPrimaryFixedVariant">@color/gray_700</item>
    </style>

    <!-- Dynamic colors theme. -->
    <style name="Theme.DynamicColors" parent="ThemeOverlay.Material3.DynamicColors.DayNight">
    </style>

    <!-- Dracula theme. -->
    <style name="Theme.Dracula" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/dracula_green</item>
        <item name="colorOnPrimary">@color/dracula_background</item>
        <item name="colorPrimaryContainer">@color/dracula_green</item>
        <item name="colorOnPrimaryContainer">@color/dracula_background</item>
        <item name="colorSecondary">@color/dracula_purple</item>
        <item name="colorOnSecondary">@color/dracula_background</item>
        <item name="colorSecondaryContainer">@color/dracula_purple</item>
        <item name="colorOnSecondaryContainer">@color/dracula_background</item>
        <item name="errorTextColor">@color/dracula_red</item>
        <item name="colorOnError">@color/dracula_background</item>
        <item name="colorOnBackground">@color/dracula_foreground</item>
        <item name="colorSurface">@color/dracula_background</item>
        <item name="colorOnSurface">@color/dracula_foreground</item>
        <item name="colorSurfaceVariant">@color/dracula_current_line</item>
        <item name="colorOnSurfaceVariant">@color/dracula_foreground</item>
        <item name="colorOutline">@color/dracula_purple</item>
        <item name="colorOutlineVariant">@color/dracula_comment</item>
        <item name="colorOnPrimaryFixedVariant">@color/dracula_comment</item>
        <item name="colorSurfaceContainerHighest">@color/dracula_current_line</item>
        <item name="colorSurfaceContainerHigh">@color/dracula_background</item>
        <item name="colorSurfaceContainerLow">@color/dracula_current_line</item>
        <item name="colorSurfaceContainer">@color/dracula_background_variant</item>

        <item name="android:colorBackground">@color/dracula_background</item>
        <item name="android:statusBarColor">@color/dracula_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorSecondary">@color/dracula_cyan</item>
    </style>

    <!-- Nord theme. -->
    <style name="Theme.Nord" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/nord8</item>
        <item name="colorOnPrimary">@color/nord0</item>
        <item name="colorPrimaryContainer">@color/nord8</item>
        <item name="colorOnPrimaryContainer">@color/nord0</item>
        <item name="colorSecondary">@color/nord7</item>
        <item name="colorOnSecondary">@color/nord0</item>
        <item name="colorSecondaryContainer">@color/nord7</item>
        <item name="colorOnSecondaryContainer">@color/nord0</item>
        <item name="errorTextColor">@color/nord11</item>
        <item name="colorOnError">@color/nord0</item>
        <item name="colorOnBackground">@color/nord0</item>
        <item name="colorSurface">@color/nord6</item>
        <item name="colorOnSurface">@color/nord0</item>
        <item name="colorSurfaceVariant">@color/nord8</item>
        <item name="colorOnSurfaceVariant">@color/nord0</item>
        <item name="colorOutline">@color/nord9</item>
        <item name="colorOutlineVariant">@color/nord10</item>
        <item name="colorOnPrimaryFixedVariant">@color/nord2</item>
        <item name="colorSurfaceContainerHighest">@color/nord5</item>
        <item name="colorSurfaceContainerHigh">@color/nord4</item>
        <item name="colorSurfaceContainerLow">@color/nord5</item>
        <item name="colorSurfaceContainer">@color/nord4</item>

        <item name="android:colorBackground">@color/nord6</item>
        <item name="android:statusBarColor">@color/nord6</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/nord0</item>
        <item name="android:textColorSecondary">@color/nord1</item>
    </style>
</resources>
